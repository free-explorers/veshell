{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Veshell Settings",
    "description": "System settings",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string"
        },
        "keyboard": {
            "type": "object",
            "properties": {
                "layout": {
                    "type": "string"
                },
                "hotkeys": {
                    "type": "object",
                    "properties": {
                        "system": {
                            "type": "object",
                            "properties": {
                                "increaseVolume": {
                                    "type": "string"
                                },
                                "decreaseVolume": {
                                    "type": "string"
                                },
                                "muteVolume": {
                                    "type": "string"
                                }
                            }
                        },
                        "screen": {
                            "type": "object",
                            "properties": {
                                "focusWorkspaceAbove": {
                                    "type": "string"
                                },
                                "focusWorkspaceBelow": {
                                    "type": "string"
                                }
                            }
                        },
                        "workspace": {
                            "type": "object",
                            "properties": {
                                "focusLeftTileable": {
                                    "type": "string"
                                },
                                "focusRightTileable": {
                                    "type": "string"
                                },
                                "closeTileable": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            "additionalProperties": false
        },
        "theme": {
            "type": "object",
            "properties": {
                "color": {
                    "type": "string"
                },
                "gtkTheme": {
                    "type": "string"
                },
                "iconTheme": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    }
}